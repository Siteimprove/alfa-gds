{
  "$schema": "http://json.schemastore.org/package",
  "private": true,
  "scripts": {
    "fixtures": "node scripts/fixtures.js",
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "test": "ava"
  },
  "workspaces": [
    "vendor/*"
  ],
  "devDependencies": {
    "@types/node": "^14.14.10",
    "ava": "^3.13.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "make-dir": "^3.1.0",
    "plur": "^4.0.0",
    "prettier": "^2.2.0",
    "tempy": "^1.0.0",
    "typescript": "^4.1.2"
  },
  "ava": {
    "verbose": true,
    "files": [
      "test/**/*.spec.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,md,js,json,yaml}": [
      "prettier --write"
    ]
  }
}
