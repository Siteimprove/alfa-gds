{
  "name": "alfa-gds",
  "private": true,
  "workspaces": [
    "vendor/alfa/packages/*"
  ],
  "scripts": {
    "fixtures": "node scripts/fixtures.js",
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "test": "ava"
  },
  "devDependencies": {
    "@types/node": "^13.13.0",
    "ava": "^3.7.1",
    "globby": "^11.0.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.6",
    "make-dir": "^3.0.0",
    "plur": "^4.0.0",
    "prettier": "^2.0.4",
    "tempy": "^0.5.0",
    "typescript": "^3.4.1"
  },
  "ava": {
    "verbose": true,
    "files": [
      "test/**/*.spec.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,md,json,yaml}": [
      "prettier --write",
      "git add"
    ]
  }
}
